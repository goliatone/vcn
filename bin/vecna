'use strict';

require('yargonaut')
  .style('cyan')
  .helpStyle('green.bold')
  .style('yellow', 'required');

var argv = require('yargs')
    .usage('Usage: $0 <command> [options]')
    .command('initialize', 'Create something')
    .version( function() {
  		return 'cicerone version: ' + require( '../package' ).version;
    })
    .help('h')
    .alias('h', 'help')
    .alias( 'help', '?' )
    .epilog('MIT License 2015')
    .argv;


console.log(argv);
